 <header class="header" >
  <%= link_to root_path do %>
  <div class="back-btn">戻る</div>
  <% end %>
    <div class="logo">
      <h1>自分のこと</h1>
    </div> 
</header>
        

<div class="personal">
  <div class="personal-title">
  <h2>自分のことを入力する</h2>
  </div>
  <div class="content">
    <%= form_with(model: @user, local: true) do |form| %>
    <h3>長所</h3>
      <%= form.text_area :strengths, placeholder: "長所を入力しましょう", rows: 3 %>
    <h3>趣味</h3>
      <%= form.text_area :hobbies, placeholder: "趣味を入力しましょう", rows: 3 %>
    <h3>特技</h3>
      <%= form.text_area :skills, placeholder: "特技を入力しましょう", rows: 3  %>
      <%= form.submit "保存する", class: "custom-button", style: "display: block;" %>
    <% end %>
  </div>
</div>
